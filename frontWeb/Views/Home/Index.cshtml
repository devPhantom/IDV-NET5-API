<!-- Banner -->
<section class="banner bgwhite p-t-40 p-b-40">
    <div class="container">
        <!-- Product -->
        <div class="row">
            @foreach (var item in Model.Categories)
        {
            <div class="col-sm-12 col-md-6 col-lg-6 p-b-50">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-img wrap-pic-w of-hidden pos-relative" style="text-align:center;">
                        <img src="@item.Img_Url" alt="IMG-PRODUCT" style="height:250px; width:auto;">                      
                        <div class="block1-wrapbtn w-size2">
                            <!-- Button -->
                            <a href="Products/@item.Name" class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                @item.Name
                            </a>
                        </div>
                    </div>
                </div>
            </div>
    }
        </div>
    </div>
</section>

